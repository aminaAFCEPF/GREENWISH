<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">
	<modelVersion>4.0.0</modelVersion>
	<parent>
		<groupId>fr.afcepf.ai100.g3</groupId>
		<artifactId>GREENWISH_POM</artifactId>
		<version>0.0.1</version>
	</parent>
	<artifactId>GREENWISH_EAR</artifactId>
	<packaging>ear</packaging>
	<dependencies>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_ENTITIES</artifactId>
			<version>0.0.1</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_DATA_API</artifactId>
			<version>0.0.1</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_BUSINESS_API</artifactId>
			<version>0.0.1</version>
			<type>jar</type>
		</dependency>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_DATA_EJB</artifactId>
			<version>0.0.1</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_BUSINESS_EJB</artifactId>
			<version>0.0.1</version>
			<type>ejb</type>
		</dependency>
		<dependency>
			<groupId>fr.afcepf.ai100.g3</groupId>
			<artifactId>GREENWISH_WEB</artifactId>
			<version>0.0.1</version>
			<type>war</type>
		</dependency>
	</dependencies>
	<build>
		<plugins>
			<plugin>
				<groupId>org.apache.maven.plugins</groupId>
				<artifactId>maven-ear-plugin</artifactId>
				<version>2.8</version>
				<configuration>
					<defaultLibBundleDir>lib</defaultLibBundleDir>
					<modules>
						<webModule>
							<groupId>fr.afcepf.ai100.g3</groupId>
							<artifactId>GREENWISH_WEB</artifactId>
							<uri>GreenWishWeb.war</uri>
							<contextRoot>/GreenWish</contextRoot>
						</webModule>
						<ejbModule>
							<groupId>fr.afcepf.ai100.g3</groupId>
							<artifactId>GREENWISH_DATA_EJB</artifactId>
							<uri>GreenWishDataEjb.jar</uri>
						</ejbModule>
						<ejbModule>
							<groupId>fr.afcepf.ai100.g3</groupId>
							<artifactId>GREENWISH_BUSINESS_EJB</artifactId>
							<uri>GreenWishBusinessEjb.jar</uri>
						</ejbModule>
					</modules>
				</configuration>
			</plugin>
		</plugins>
	</build>
</project>